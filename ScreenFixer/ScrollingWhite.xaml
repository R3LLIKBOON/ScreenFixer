<Page
    x:Class="ScreenFixer.ScrollingWhite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenFixer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    KeyDown="Page_KeyDown"
    >

    <Grid Background="Black"  Tapped="Background_Tapped" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  >
            <Rectangle x:Name="WhiteBar"  Fill="White" Width="500"  HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="-510,0,0,0" Loaded="Page_Loaded" />
    </Grid>
</Page>
